{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [{
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/buildScripts/srcServer.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha-webpack/bin/_mocha",
      "skipFiles": [
        "<node_internals>/**",
        "bundle.js"
      ],
      "args": [
        "--webpack-config",
        "webpack.config.debug.js",
        "${workspaceFolder}/src/**/*.test.js",
        "--timeout",
        "999999",
        "--colors",
        "-r",
        "${workspaceFolder}/buildScripts/testSetup.js",
        "-r",
        "jsdom-global/register",
        "--interactive",
        "false"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
  ]
}
